#!/bin/sh
# vim: ft=sh ts=4 sw=4 et

check_module() {
    echo "Check module $1"
    flake8 --config=/drone/src/coog/tox.ini \
        "/drone/src/coog/modules/$1"
}

main() {
    local modules
    modules=$(/drone/src/tests/checks/utils/modules.py 2>&1)
    [ $? -ne 0 ] && echo "$modules" && return 1
    local ret=0
    for module in $modules
    do
        check_module "$module"
        [ $? -ne 0 ] && ret=1
    done
    return "$ret"
}

main
